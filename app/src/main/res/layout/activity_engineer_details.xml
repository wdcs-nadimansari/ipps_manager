<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EngineerDetailsActivity">

    <RelativeLayout
        android:id="@+id/lntoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/back_arrow"
            android:tint="@color/white" />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivEngineerprofile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_placeholder_profile" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtEngineerName"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toRightOf="@id/ivBack"
            android:layout_toLeftOf="@id/ivEngineerprofile"
            android:fontFamily="@font/lato_semibold"
            android:singleLine="true"
            android:text="@string/maintenance_app"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lntoolbar"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal">


            <com.webclues.IPPSManager.view.MaterialEditText
                android:id="@+id/edtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress|textMultiLine"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_hideUnderline="true"
                app:met_typeface="@string/font_medium" />


            <com.webclues.IPPSManager.view.MaterialEditText
                android:id="@+id/edtPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/position"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_hideUnderline="true"
                app:met_typeface="@string/font_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal">


            <com.webclues.IPPSManager.view.MaterialEditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/phone"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="2"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_hideUnderline="true"
                app:met_typeface="@string/font_medium" />


            <com.webclues.IPPSManager.view.MaterialEditText
                android:id="@+id/edtCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/company"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="2"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_hideUnderline="true"
                app:met_typeface="@string/font_medium" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/colorlightgray" />

        <!--  <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Task"
              android:textColor="@color/fontColorBlack"
              android:fontFamily="@font/lato_semibold"
              />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/lato_semibold"
                android:text="Task"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_big" />

            <LinearLayout
                android:id="@+id/lnPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:visibility="visible">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:hint="@string/priority"
                    android:textAllCaps="true" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvpriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="@string/all"
                    android:textAllCaps="true"
                    android:textColor="@color/fontColorBlack50"
                    android:textColorHint="@color/fontColorBlack50"
                    android:textSize="@dimen/text_small" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPriority"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_dropdown_form"
                    android:visibility="visible" />

            </LinearLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                style="@style/AppTabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/lnPriority"
                app:tabGravity="fill"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/fontColorBlack"
                app:tabTextColor="@color/fontColorBlack50">


                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job_request" />


                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workorder" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/completed" />

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tablayout"
                android:visibility="visible" />

            <com.webclues.IPPSManager.utility.CustomViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tablayout"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>